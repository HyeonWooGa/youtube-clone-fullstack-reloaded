extends base.pug

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title", value=video.title, placeholder="Title", required, type="text", maxlength=80)
        input(name="description", value=video.description, placeholder="Description", required, type="text", minlength=20)
        input(name="hashtags", value=video.hashtags.join(), placeholder="Hashtags, separaged by comma.", required, type="text")
        input(value="Save", type="submit")